<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.fruct.oss.audioguide.fragments.MapFragment">

    <FrameLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/map_toolbar"
        android:orientation="vertical"
        android:background="#701a1a1a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/button_selector_inverted"
            android:textSize="32sp"
            android:padding="8dp"
            android:text="Play"
            android:drawableLeft="@drawable/ic_action_volume_on"/>

        <Button
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/button_selector_inverted"
            android:textSize="32sp"
            android:padding="8dp"
            android:text="Stop"
            android:drawableLeft="@drawable/ic_action_volume_muted"/>

        <Button
            android:id="@+id/button_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/button_selector_inverted"
            android:textSize="32sp"
            android:padding="8dp"
            android:text="Details"
            android:drawableLeft="@drawable/ic_action_done"/>
    </LinearLayout>

</RelativeLayout>
